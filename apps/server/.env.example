# Application Configuration
PORT=3000
NODE_ENV=development       # production, test
APP_NAME=YourAppName
APP_VERSION=1.0.0
APP_DESCRIPTION="Your application description"

# Swagger Configuration
SWAGGER_TITLE="Your API Documentation"
SWAGGER_DESCRIPTION="API Documentation"
SWAGGER_VERSION=1.0
SWAGGER_PATH=api           # Path where Swagger UI will be available
SWAGGER_TAG=docs           # Default tag for endpoints

# Security
CORS_ORIGIN=*
CORS_METHODS=GET,HEAD,PUT,PATCH,POST,DELETE
CORS_CREDENTIALS=true
CORS_MAX_AGE=3600

# Rate Limiting (optional)
THROTTLE_TTL=60            # Time window in seconds
THROTTLE_LIMIT=100         # Max requests per IP in the time window

# Admin & Web Config
NEXT_PUBLIC_ADMIN_URL="http://localhost:3001"
NEXT_PUBLIC_SHOP_URL="http://localhost:3002"